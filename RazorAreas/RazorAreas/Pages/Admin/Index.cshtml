@page


@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> userManager;


@model RazorAreas.Pages.Admin.AdminPageModel


<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in userManager.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page-handler="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Изменить</a>
                    <a asp-page-handler="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Удалить</a>
                    <a asp-page-handler="GrantUser" asp-route-id="@user.Id" class="btn btn-warning">Изменить права</a>
                </td>
            </tr>
        }
    </tbody>
</table>
